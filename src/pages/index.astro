---
/* src/pages/index.astro */
import Layout from '../layouts/Layout.astro';

// LISTA DE MARCAS (Puedes agregar o quitar aquí fácilmente)
const brands = [
  { name: "APC", img: "/marcas/apc.svg" },
  { name: "Aruba", img: "/marcas/aruba.svg" },
  { name: "Biswal", img: "/marcas/biswal.jpg" },
  { name: "Cisco", img: "/marcas/cisco.svg" },
  { name: "Dell", img: "/marcas/dell.svg" },
  { name: "Dell Technologies", img: "/marcas/dell-technologies.svg" },
  { name: "Epson", img: "/marcas/epson.svg" },
  { name: "EZVIZ", img: "/marcas/ezviz.svg" },
  { name: "Fortinet", img: "/marcas/fortinet.svg" },
  { name: "HP", img: "/marcas/hp.svg" },
  { name: "Hewlett", img: "/marcas/Hewlett_Packard_Enterprise.svg" },
  { name: "Huawei Ekit", img: "/marcas/huawei-ekit.jpg" },
  { name: "Huawei Fusion Solar", img: "/marcas/huawei-fusionsolar.png" },
  { name: "Intellinet", img: "/marcas/IntellinetLogo.jpg" },
  { name: "Lenovo", img: "/marcas/lenovo.svg" },
  { name: "Linksys", img: "/marcas/Linksys.svg" },
  { name: "Logitech", img: "/marcas/logitech.svg" },
  { name: "Manhattan", img: "/marcas/Manhattan.svg" },
  { name: "MasterWork", img: "/marcas/masterwork.png" },
  { name: "Samsung", img: "/marcas/samsung.svg" },
  { name: "Tp Link", img: "/marcas/TP-Link.svg" },
  { name: "Vericash", img: "/marcas/vericash.png" },
  { name: "Vertiv", img: "/marcas/vertiv.png" },

];
---

<Layout title="DMC | Inicio">
  
  <section class="coming-soon-section">
    <div class="container">
      
      <div class="text-content">
        <h2>Próximamente <span class="highlight">Novedades</span></h2>
        <p>Trabajamos con las marcas líderes mundiales para ofrecerte lo último en tecnología.</p>
      </div>

      <div class="partners-grid">
        {brands.map((brand) => (
          <div class="partner-card">
            <img 
              src={brand.img} 
              alt={`Logo ${brand.name}`} 
              loading="lazy"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
            />
            <span class="fallback-text" style="display:none;">{brand.name}</span>
          </div>
        ))}
      </div>

    </div>
  </section>

  <section class="location-section">
    <div class="container">
      <div class="location-grid">
        
        <div class="location-info">
          <span class="badge-loc">Oficina Central</span>
          <h2>Nos puedes encontrar en</h2>
          
          <div class="address-box">
            <i class="fa-solid fa-location-dot icon-pin"></i>
            <div>
              <p class="address-title">Doble vía La Guardia 3800</p>
              <p class="address-subtitle">Santa Cruz de la Sierra, Bolivia</p>
            </div>
          </div>

          <a 
            href="https://www.google.com/maps/place/DMC+S.A./@-17.8101475,-63.2068304,17z/data=!3m1!4b1!4m6!3m5!1s0x93f1c29cdb983dcf:0xcc0ddfa75746ae7e!8m2!3d-17.8101475!4d-63.2068304!16s%2Fg%2F11c5q3y_6r?entry=ttu" 
            target="_blank" 
            class="btn-map"
          >
            <i class="fa-solid fa-map-location-dot"></i> Cómo llegar
          </a>
        </div>

        <div class="location-map-visual">
          <iframe 
            src="https://maps.google.com/maps?q=DMC%20S.A.%20Santa%20Cruz&t=&z=15&ie=UTF8&iwloc=&output=embed" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="Mapa de Ubicación DMC">
          </iframe>
        </div>

      </div>
    </div>
  </section>

</Layout>

<style>
  /* --- VARIABLES LOCALES --- */
  :root {
    --dmc-slate: #425563;
    --dmc-red: #e64a33;
    --dmc-gray-bg: #f4f6f9;
  }

  /* --- SECCIÓN NOVEDADES --- */
  .coming-soon-section {
    padding: 80px 0;
    text-align: center;
    background-color: white;
  }

  .text-content { margin-bottom: 50px; }

  h2 {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--dmc-slate);
    margin-bottom: 10px;
    text-transform: uppercase;
    line-height: 1.2;
  }

  .highlight { color: var(--dmc-red); }
  p { font-size: 1.1rem; color: #6c757d; }

  /* --- NUEVO GRID DE MARCAS --- */
  .partners-grid {
    display: grid;
    /* Esto crea columnas automáticas. Mínimo 120px de ancho, si hay espacio crecen */
    grid-template-columns: repeat(auto-fill, minmax(130px, 1fr)); 
    gap: 20px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .partner-card {
    background: white;
    border: 1px solid #eee;
    border-radius: 8px;
    height: 100px; /* Altura fija para uniformidad */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0,0,0,0.02);
  }

  .partner-card img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain; /* Asegura que el logo se vea entero sin recortarse */
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  .partner-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    border-color: var(--dmc-red); /* Borde rojo sutil al pasar */
  }

  .partner-card:hover img {
    filter: grayscale(0%); /* Color original al pasar */
    opacity: 1;
    transform: scale(1.1);
  }

  /* Texto fallback si no hay imagen */
  .fallback-text {
    font-weight: bold;
    color: #ccc;
    font-size: 0.9rem;
  }

  /* --- UBICACIÓN (Mismo estilo anterior) --- */
  .location-section {
    background-color: var(--dmc-gray-bg);
    padding: 80px 0;
    border-top: 1px solid #e9ecef;
  }

  .location-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 50px;
    align-items: center;
  }

  .badge-loc {
    background: rgba(66, 85, 99, 0.1);
    color: var(--dmc-slate);
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: 5px 12px;
    border-radius: 20px;
    margin-bottom: 15px;
    display: inline-block;
  }

  .location-info h2 { font-size: 2.2rem; margin-bottom: 30px; color: var(--dmc-slate); }

  .address-box {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    background: white;
    padding: 25px;
    border-radius: 12px;
    border-left: 5px solid var(--dmc-red);
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    align-items: center;
  }

  .icon-pin { font-size: 2rem; color: var(--dmc-red); }
  .address-title { font-size: 1.2rem; font-weight: 700; color: var(--dmc-slate); margin: 0; }
  .address-subtitle { font-size: 1rem; color: #777; margin: 0; }

  .btn-map {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background-color: var(--dmc-slate);
    color: white;
    padding: 14px 30px;
    border-radius: 50px;
    font-weight: 600;
    transition: 0.3s;
    box-shadow: 0 4px 10px rgba(66, 85, 99, 0.3);
  }

  .btn-map:hover {
    background-color: var(--dmc-red);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(230, 74, 51, 0.4);
  }

  .location-map-visual {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    height: 400px;
    border: 4px solid white;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .location-grid { grid-template-columns: 1fr; gap: 40px; text-align: center; }
    .address-box { flex-direction: column; text-align: center; }
    .location-map-visual { height: 300px; }
    
    /* Ajuste para móviles: Grid de 2 columnas */
    .partners-grid { grid-template-columns: repeat(2, 1fr); }
  }
</style>