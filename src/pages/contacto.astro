---
/* src/pages/contacto.astro */
import Layout from '../layouts/Layout.astro';
---

<Layout title="DMC | Contacto">
  <section id="contacto" class="section-contact">
    <div class="container">
      
      <div class="contact-header">
        <span class="tag">Conectemos</span>
        <h2 class="section-title">Hablemos de tu proyecto</h2>
        <p>Estamos listos para ofrecerte la mejor asesoría técnica y soluciones informáticas.</p>
      </div>

      <div class="contact-grid">
        
        <div class="contact-info">
          
          <div class="info-item highlight">
            <div class="info-icon-main">
              <i class="fa-solid fa-headset"></i>
            </div>
            
            <div class="contact-list-wrapper">
              <h3>Canales de Atención</h3>
              
              <a href="tel:+59178006494" class="contact-row">
                <div class="icon-small"><i class="fa-solid fa-phone"></i></div>
                <div class="row-text">
                  <span class="label">Telefono 1</span>
                  <span class="number">+591 780-06494</span>
                </div>
              </a>

              <a href="tel:+59133543000" class="contact-row">
                <div class="icon-small"><i class="fa-solid fa-phone"></i></div>
                <div class="row-text">
                  <span class="label">Telefono 2</span>
                  <span class="number">+591 3 3543000</span>
                </div>
              </a>
            </div>
          </div>
          <div class="info-item">
            <div class="info-icon">
              <i class="fa-solid fa-envelope"></i>
            </div>
            <div>
              <h3>Email Corporativo</h3>
              <a href="mailto:info@dmc.bo" class="contact-link">info@dmc.bo</a>
              <p class="sub-text">Respondemos en menos de 24h</p>
            </div>
          </div>

          <div class="info-item">
             <div class="info-icon">
               <i class="fa-solid fa-clock"></i>
             </div>
             <div>
               <h3>Horario de Atención</h3>
               <p class="contact-text">Lunes a Viernes</p>
               <p class="contact-subtext">8:30 - 17:30</p>
             </div>
           </div>

        </div>

        <form class="contact-form">
          <div class="form-group">
            <label for="nombre">Nombre Completo</label>
            <input type="text" id="nombre" name="nombre" placeholder="Ej. Juan Pérez" required />
          </div>

          <div class="form-group">
            <label for="empresa">Empresa o Tienda</label>
            <input type="text" id="empresa" name="empresa" placeholder="Nombre de tu negocio" />
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="telefono">Teléfono</label>
              <input type="tel" id="telefono" name="telefono" placeholder="+591" required />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="correo@ejemplo.com" required />
            </div>
          </div>

          <div class="form-group">
            <label for="mensaje">Mensaje</label>
            <textarea id="mensaje" name="mensaje" rows="4" placeholder="¿En qué productos estás interesado?" required></textarea>
          </div>

          <button type="submit" class="btn-submit">Enviar Solicitud</button>
        </form>

      </div>
    </div>
  </section>
</Layout>

<style>
  /* --- VARIABLES LOCALES --- */
  :root {
    --dmc-slate: #425563;
    --dmc-red: #e64a33;
    --dmc-gray-bg: #f4f6f9;
  }

  .section-contact {
    padding: 60px 0;
    background-color: var(--dmc-gray-bg);
  }

  .contact-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 50px;
  }

  .tag {
    color: var(--dmc-red);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.85rem;
    margin-bottom: 10px;
    display: block;
    letter-spacing: 1px;
  }

  .section-title {
    font-size: 2.5rem;
    color: var(--dmc-slate);
    margin-bottom: 15px;
    font-weight: 900;
    line-height: 1.1;
  }

  .contact-header p {
    color: #6c757d;
    font-size: 1.1rem;
  }

  /* --- Grid Layout --- */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 40px;
    align-items: start;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  /* --- Tarjetas Normales --- */
  .info-item {
    display: flex;
    gap: 20px;
    align-items: center;
    padding: 25px;
    border-radius: 8px;
    background: white;
    border: 1px solid #e9ecef;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .info-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
  }

  .info-icon {
    width: 50px;
    height: 50px;
    background: rgba(230, 74, 51, 0.1);
    color: var(--dmc-red);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    flex-shrink: 0;
    font-size: 1.2rem;
  }

  .info-item h3 {
    font-size: 0.9rem;
    text-transform: uppercase;
    color: #6c757d;
    margin-bottom: 5px;
    font-weight: 700;
  }

  .contact-link {
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--dmc-slate);
    transition: color 0.2s;
  }
  .contact-link:hover { color: var(--dmc-red); }
  
  .sub-text, .contact-subtext { font-size: 0.9rem; color: #888; margin-top: 2px; }
  .contact-text { font-weight: 700; color: var(--dmc-slate); font-size: 1.1rem; }

  /* --- TARJETA DESTACADA (HIGHLIGHT) MEJORADA --- */
  .info-item.highlight {
    background: var(--dmc-slate);
    border-color: var(--dmc-slate);
    color: white;
    align-items: flex-start; /* Alinear arriba */
  }

  .info-icon-main {
    width: 50px;
    height: 50px;
    background: white;
    color: var(--dmc-red);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 1.3rem;
    flex-shrink: 0;
    margin-top: 5px;
  }

  .contact-list-wrapper {
    flex-grow: 1;
  }

  .info-item.highlight h3 {
    color: rgba(255,255,255,0.7);
    margin-bottom: 15px;
  }

  /* Filas de contacto (WhatsApp / Fijo) */
  .contact-row {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 10px;
    border-radius: 8px;
    background: rgba(255,255,255,0.05);
    margin-bottom: 10px;
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
  }

  .contact-row:last-child { margin-bottom: 0; }

  .contact-row:hover {
    background: rgba(255,255,255,0.15);
    transform: translateX(5px);
  }

  .icon-small {
    font-size: 1.2rem;
    width: 30px;
    text-align: center;
  }

  .row-text {
    display: flex;
    flex-direction: column;
  }

  .label {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: rgba(255,255,255,0.6);
    font-weight: 600;
  }

  .number {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
  }

  /* Color específico para WhatsApp */
  .contact-row.whatsapp .icon-small {
    color: #25D366; /* Verde WhatsApp */
  }
  
  /* --- Formulario --- */
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    border: 1px solid #e9ecef;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group label {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--dmc-slate);
  }

  .form-group input, .form-group textarea {
    padding: 12px 15px;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    font-family: inherit;
    font-size: 0.95rem;
    color: var(--dmc-slate);
    background-color: #fcfcfc;
    transition: all 0.3s ease;
  }

  .form-group input:focus, .form-group textarea:focus {
    outline: none;
    border-color: var(--dmc-red);
    background-color: white;
    box-shadow: 0 0 0 3px rgba(230, 74, 51, 0.1);
  }

  .btn-submit {
    background: var(--dmc-slate);
    color: white;
    border: none;
    padding: 16px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 50px;
    margin-top: 10px;
    letter-spacing: 0.5px;
  }

  .btn-submit:hover {
    background: var(--dmc-red);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(179, 58, 39, 0.3);
  }

  /* --- Responsive --- */
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .form-row { grid-template-columns: 1fr; }
    .contact-form { padding: 25px; }
    .section-title { font-size: 2rem; }
  }
</style>